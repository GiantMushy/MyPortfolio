@* Body partial - Horizontal Carousel Layout *@
<link rel="stylesheet" href="css/body.css" />
<link rel="stylesheet" href="css/project.css" />

<div class="carousel-wrapper">
    <!-- Carousel Track -->
    <div class="carousel-track" id="carousel-track">

        <!-- ===== Unity Panel ===== -->
        <section class="panel" data-index="0">
            <div class="panel-inner">
                <div class="panel-header">
                    <img class="panel-icon" src="@Url.Content("~/images/unity-selected.png")" alt="Unity" />
                    <h1 class="panel-title">Unity</h1>
                </div>
                <div class="panel-content">
                    @await Html.PartialAsync("_FellowPirates")
                    <div class="project-divider"></div>
                    @await Html.PartialAsync("_CultOfTheJarls")
                    <div class="project-divider"></div>
                    @await Html.PartialAsync("_Aseprite")
                </div>
            </div>
            <partial name="Footer" />
        </section>

        <!-- ===== Python Panel ===== -->
        <section class="panel" data-index="1">
            <div class="panel-inner">
                <div class="panel-header">
                    <img class="panel-icon" src="@Url.Content("~/images/python-selected.png")" alt="Python" />
                    <h1 class="panel-title">Python</h1>
                </div>
                <div class="panel-content">
                    @await Html.PartialAsync("_NanAir")
                    <div class="project-divider"></div>
                    @await Html.PartialAsync("_CarGame2D")
                    <div class="project-divider"></div>
                    @await Html.PartialAsync("_CarGame3D")
                </div>
            </div>
            <partial name="Footer" />
        </section>

        <!-- ===== Web Panel ===== -->
        <section class="panel" data-index="2">
            <div class="panel-inner">
                <div class="panel-header">
                    <img class="panel-icon" src="@Url.Content("~/images/web-selected.png")" alt="Web" />
                    <h1 class="panel-title">Web</h1>
                </div>
                <div class="panel-content">
                    @await Html.PartialAsync("_Nestor")
                    <div class="project-divider"></div>
                    @await Html.PartialAsync("_Kodi")
                </div>
            </div>
            <partial name="Footer" />
        </section>

        <!-- ===== Teaching Panel ===== -->
        <section class="panel" data-index="3">
            <div class="panel-inner">
                <div class="panel-header">
                    <img class="panel-icon" src="@Url.Content("~/images/teaching-selected.png")" alt="Teaching" />
                    <h1 class="panel-title">Teaching</h1>
                </div>
                <div class="panel-content">
                    @await Html.PartialAsync("_Teaching")
                </div>
            </div>
            <partial name="Footer" />
        </section>

        <!-- ===== Woodworking Panel ===== -->
        <section class="panel" data-index="4">
            <div class="panel-inner">
                <div class="panel-header">
                    <img class="panel-icon" src="@Url.Content("~/images/woodworking-selected.png")" alt="Woodworking" />
                    <h1 class="panel-title">Woodworking</h1>
                </div>
                <div class="panel-content">
                    @await Html.PartialAsync("_Woodworking")
                </div>
            </div>
            <partial name="Footer" />
        </section>

    </div>

    <!-- Navigation Arrows -->
    <button class="nav-arrow nav-left" id="nav-left" aria-label="Previous section">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="15 18 9 12 15 6"></polyline></svg>
    </button>
    <button class="nav-arrow nav-right" id="nav-right" aria-label="Next section">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 6 15 12 9 18"></polyline></svg>
    </button>

    <!-- Panel Indicator Dots -->
    <div class="panel-dots" id="panel-dots">
        <span class="dot active" data-panel="0"></span>
        <span class="dot" data-panel="1"></span>
        <span class="dot" data-panel="2"></span>
        <span class="dot" data-panel="3"></span>
        <span class="dot" data-panel="4"></span>
    </div>
</div>
